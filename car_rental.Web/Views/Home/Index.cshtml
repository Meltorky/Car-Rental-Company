@using car_rental.Application.DTOs.Deal
@model FilterDealsFormDTO
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form asp-action="FindDeals" asp-controller="Home" enctype="multipart/form-data" method="post" class="mb-5">
	<div class="row justify-content-around">
		<div class="col-md-4 mt-3">

			<h3 class="text-success fw-bolder mb-3" id="formTitle">
				<i class="bi bi-plus-circle-dotted"></i>
				Find Deals
			</h3>

			<div class="form-group">
				<label class="form-label fw-bolder"></label>
				<input type="text" class="form-control" asp-for="Address" placeholder="write Location" required/>
				<span asp-validation-for="Address" class=" text-danger"></span>
			</div>

			<div class="form-group mt-3">
				<label class="form-label fw-bolder"></label>
				<input type="date" class="form-control" asp-for="StartDate" required />
				<span asp-validation-for="StartDate" class="text-danger"></span>
			</div>

			<div class="form-group mt-3">
				<label class="form-label fw-bolder"></label>
				<input type="date" class="form-control" asp-for="EndDate" required />
				<span asp-validation-for="EndDate" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-success mt-4">Find Deals</button>
		</div>
	</div>
</form>
