@using Microsoft.AspNetCore.Identity
@using car_rental.Domain.Identity.Enums
@using car_rental.Domain.Identity.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="bi bi-person-circle text-white fw-bolder fs-3"></i></a>
    </li>
    <li class="nav-item ms-2">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn text-white fw-bolder fs-6">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-white fw-bolder fs-6" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white fw-bolder fs-6" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
